<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Todo</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="/style.css">
    </head>
    
    <body>
        <div class="container mt-5">
            <h1 class="text-center text-primary">Task Manager</h1>
            <form action="/add-task" method="POST" class="d-flex justify-content-center mb-4">
                <input type="text" name="task" class="form-control w-50 task-input" placeholder="Add Task" required>
                <button type="submit" class="btn btn-primary ml-2 task-btn">Add Task</button>
            </form>
    
            <div class="row">
                <div class="col-md-6">
                    <h2>Added Tasks</h2>
                    <ul class="list-group">
                        <% tasks.forEach(function(task) { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center task-item">
                                <form action="/complete-task" method="POST" style="display: inline;">
                                    <input type="hidden" name="completedTask" value="<%= task %>">
                                    <button type="submit" class="btn btn-success btn-sm task-complete-btn">Complete</button>
                                </form>
                                <%= task %>
                            </li>
                        <% }) %>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h2>Completed Tasks</h2>
                    <ul class="list-group">
                        <% completedTasks.forEach(function(task) { %>
                            <li class="list-group-item task-completed-item"><%= task %></li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </body>
    </html>
    